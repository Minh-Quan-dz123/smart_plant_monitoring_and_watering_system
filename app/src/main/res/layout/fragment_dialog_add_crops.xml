<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_bgr"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_bgr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:text="@string/add_crops"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@id/img_bgr"
        app:layout_constraintTop_toTopOf="@id/img_bgr" />

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_bgr"
        android:paddingStart="10dp"
        android:queryHint="Tìm kiếm"
        app:layout_constraintEnd_toEndOf="@+id/img_bgr"
        app:layout_constraintStart_toStartOf="@+id/img_bgr"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:ignore="RtlSymmetry" />

    <ListView
        android:id="@+id/rcv_list_crops"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_bgr"
        app:layout_constraintEnd_toEndOf="@+id/img_bgr"
        app:layout_constraintStart_toStartOf="@id/img_bgr"
        app:layout_constraintTop_toBottomOf="@id/search_view"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/rounded_bgr_crop"
        android:padding="2dp"
        android:src="@drawable/icon_close"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="@+id/img_bgr"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toEndOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/img_add"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="15dp"
        android:elevation="2dp"
        android:src="@drawable/icon_add"
        app:layout_constraintBottom_toBottomOf="@+id/img_bgr"
        app:layout_constraintEnd_toEndOf="@+id/img_bgr"
        app:layout_constraintStart_toStartOf="@+id/img_bgr" />
</androidx.constraintlayout.widget.ConstraintLayout>
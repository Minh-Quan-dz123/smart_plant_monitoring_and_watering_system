<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/c_view"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="4dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp">

        <ImageView
            android:id="@+id/img_bgr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/bgr_crops" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_name_crops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/des_add_crops"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/c_view"
        app:layout_constraintEnd_toEndOf="@id/c_view"
        app:layout_constraintStart_toStartOf="@+id/c_view"
        app:layout_constraintTop_toTopOf="@+id/c_view" />

    <ImageView
        android:id="@+id/img_icon_out"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/rounded_bgr"
        android:padding="6dp"
        android:src="@drawable/icon_arrow_out"
        app:layout_constraintEnd_toEndOf="@+id/c_view"
        app:layout_constraintTop_toTopOf="@+id/c_view" />


</androidx.constraintlayout.widget.ConstraintLayout>
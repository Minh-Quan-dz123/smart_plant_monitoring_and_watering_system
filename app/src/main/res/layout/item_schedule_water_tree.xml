<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toStartOf="@+id/img_edit"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/schedule_water_tree"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/img_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="2dp"
        android:src="@drawable/icon_edit"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item"
        app:layout_constraintEnd_toStartOf="@+id/img_remove"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="@+id/tv_item" />

    <ImageView
        android:id="@+id/img_remove"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="5dp"
        android:padding="2dp"
        android:src="@drawable/icon_remove"
        app:layout_constraintBottom_toTopOf="@+id/img_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique // "ADMIN", "USER", ...
  users User[]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  username  String?
  role      Role     @relation(fields: [roleId], references: [id])
  roleId    Int
  plants    Plant[]
  gardens   Garden[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Plant {
  id          Int      @id @default(autoincrement())
  name        String   @unique // Tên cây
  description String? // Mô tả, công dụng, cách trồng
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById Int
  gardens     Garden[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Garden {
  id          Int          @id @default(autoincrement())
  name        String
  plant       Plant        @relation(fields: [plantId], references: [id])
  plantId     Int
  user        User         @relation(fields: [userId], references: [id])
  userId      Int
  sensors     Sensor[]
  irrigations Irrigation[]
  schedules   Schedule[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Sensor {
  id            Int      @id @default(autoincrement())
  temperature   Float    // Nhiệt độ (DHT11) - đơn vị: °C
  airHumidity   Float    // Độ ẩm không khí (DHT11) - đơn vị: %
  soilMoisture  Float    // Độ ẩm đất - đơn vị: %
  timestamp     DateTime @default(now())
  garden        Garden   @relation(fields: [gardenId], references: [id], onDelete: Cascade)
  gardenId      Int
}

model Irrigation {
  id        Int      @id @default(autoincrement())
  status    Boolean  @default(false) // đang tưới hay không
  timestamp DateTime @default(now())
  garden    Garden   @relation(fields: [gardenId], references: [id])
  gardenId  Int
}

model Schedule {
  id        Int      @id @default(autoincrement())
  time      String   // Thời gian tưới (format HH:MM, ví dụ "06:00", "18:00")
  duration  Int      // Thời gian tưới (phút, ví dụ 3)
  enabled   Boolean  @default(true) // Bật/tắt schedule
  garden    Garden   @relation(fields: [gardenId], references: [id], onDelete: Cascade)
  gardenId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_bgr"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_bgr_crops"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_sensor"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:padding="3dp"
        android:src="@drawable/icon_sensor"
        app:layout_constraintStart_toStartOf="@id/img_bgr"
        app:layout_constraintTop_toTopOf="@+id/img_bgr" />

    <TextView
        android:id="@+id/tv_name_sensor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="@string/name_sensor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_sensor"
        app:layout_constraintEnd_toStartOf="@+id/tv_state_wifi"
        app:layout_constraintStart_toEndOf="@id/img_sensor"
        app:layout_constraintTop_toTopOf="@+id/img_sensor" />

    <ImageView
        android:id="@+id/img_wifi"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="20dp"
        android:padding="3dp"
        android:src="@drawable/icon_loss_connect"
        app:layout_constraintBottom_toBottomOf="@id/tv_name_sensor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_name_sensor" />

    <TextView
        android:id="@+id/tv_name_crops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tomato"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/img_sensor"
        app:layout_constraintTop_toBottomOf="@+id/img_sensor"
        app:layout_constraintVertical_bias="0.3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_state"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/rounded_bgr_crops"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:text="@string/off"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_crops"
        app:layout_constraintEnd_toEndOf="@+id/img_bgr"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/tv_name_crops"
        app:layout_constraintTop_toTopOf="@+id/tv_name_crops"
        app:layout_constraintWidth_percent="0.2" />

    <TextView
        android:id="@+id/tv_state_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="@string/disconnect"
        android:textColor="#1577B4"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_wifi"
        app:layout_constraintEnd_toStartOf="@+id/img_wifi"
        app:layout_constraintTop_toTopOf="@+id/img_wifi" />

</androidx.constraintlayout.widget.ConstraintLayout>